<h1>Sign Up</h1>

<%= form_for @user, url: signup_path do |f| %>

<% if @user.errors.present? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
</div>

<div>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div>


<div>
  <%= f.submit "Sign up" %>
</div>

<% end %>
