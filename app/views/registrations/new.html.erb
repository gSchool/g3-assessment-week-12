<h1>Sign Up!</h1>

<%= form_for(@user, url: signup_path) do |f| %>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <br>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <br>
  <div>
    <%= f.submit 'Submit!' %>
  </div>

<% end %>
