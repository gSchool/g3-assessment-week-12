<h1>Sign In</h1>

<%= form_tag signin_path do |f| %>

<% if @sign_in_error %>
  <div><%= @sign_in_error %></div>
  <% end %>

<div class= "field">
  <%= label_tag :username %><br>
  <%= text_field_tag :username %>
</div>

<div class= "field">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</div>

<div class= "actions">
  <%= submit_tag "Sign in" %>
</div>

<% end %>
