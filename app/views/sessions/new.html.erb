<h1>Sign In</h1>


    <% if @sign_in_error %>
      <%= @sign_in_error %>
      <% end %>
    <%= form_tag login_path do |f| %>

    <%= label_tag :username %>
    <%= text_field_tag :username, nil, class:"form-control" %>

    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class:"form-control" %>

    <%= submit_tag "Sign In", login_path %>
    <% end %>

    <p>New user? <%= link_to "Sign Up now!", signup_path %></p>
