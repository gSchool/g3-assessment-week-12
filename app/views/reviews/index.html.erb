<h1>Reviews</h1>

<table>
  <thead>
  <tr>
    <th>Movie</th>
    <th>Reviewer</th>
    <th>Date</th>
  </tr>
  </thead>

  <tbody>
  <% @movie.reviews.each do |review| %>
  <tr>
  <td><%= review.title %></td>
  <td><%= review.user %></td>
  <td><%= review.body %></td>

  </tr>
  <% end %>
  </tbody>
</table>
