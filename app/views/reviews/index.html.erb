<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Reviewer</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @reviews.each do |review| %>
      <td><%= review.movie.name %></td>
      <td><%= review.user.username %></td>
      <td><%= review.created_at.to_date %></td>
    </tr>
    <% end %>
  </tbody>
</table>
