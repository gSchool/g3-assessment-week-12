<div class="page-header">
  <h1>Reviews</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Movie</th>
      <th>Reviewer</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <tr>
      <td><%= review.movie.name %></td>
      <td><%= review.user.username %></td>
      <td><%= review.movie.date %></td>
    </tr>
    <% end %>
  </tbody>
</table>
