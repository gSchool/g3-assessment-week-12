<table>
  <thead>
    <tr>
      <td>Movie</td>
      <td>Reviewer</td>
      <td>Date</td>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
    <% binding.pry %>
    <tr>
      <td><%= review.movie.title %></td>
      <td><%= review.user.username %></td>
      <td><%= review.created_at.strftime("%m/%d/%Y") %></td>
    </tr>
    <% end %>
  </tbody>
</table>
