<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Reviewer</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= Movie.find(review.movie_id).name %></td>
        <td><%= User.find(review.user_id).username %></td>
        <td><%= Movie.find(review.movie_id).year %></td>
      </tr>
    <% end %>
  </tbody>
</table>
