<div class="page-header">
  <h1>Reviews</h1>
</div>

<div class="reviews">

  <table class="table">
    <thead>
      <tr>
        <th>
          Movie
        </th>
        <th>
          Reviewer
        </th>
        <th>
          Date
        </th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
      <tr>
        <td>
          <%= review.get_movie(review.movie_id) %>
        </td>
        <td>
          <%= review.get_user(review.user_id) %>
        </td>
        <td>
          <%= review.created_at %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>




</div>
