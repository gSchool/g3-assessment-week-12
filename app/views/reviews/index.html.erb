<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Reviewer</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>

    <% @reviews.order("created_at desc").each do |review| %>
      <tr>
        <% if review.movie_id != nil %>
        <td> <%= review.movie.name %></td>
        <td> <%= review.user.username %></td>
        <td> <%= review.created_at.strftime("%m %d %Y") %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
