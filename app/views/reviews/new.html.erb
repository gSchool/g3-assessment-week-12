<h1> New Review </h1>
<%= form_for([@movie, @review]) do |f| %>
  <% if params[:movie_id].blank? %>
    <%= f.collection_select :movie_id, Movie.all, :id, :name, {prompt: 'All Movies'} %><br /><br />
  <% else %>
  <%= f.hidden_field :movie_id, value: params[:movie_id] %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %><br /><br />
  <%= f.label :body %>
  <%= f.text_area :body %><br /><br />
  <%= f.submit "Submit" %>
<% end %>
