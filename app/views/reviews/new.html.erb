<h1>New Review</h1>

<%= form_for([@movie, Review.new]) do |f| %>

<% if @review.errors.any? %>
  <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

  <% if params[:movie_id].present? %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit %>
  </div>

  <% else %>

  <div>
    <%= f.collection_select :movie_id, Movie.all, :id, :name, {prompt: 'Select Movie'} %>
  </div>

  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit %>
  </div>

  <% end %>


  <% end %>
