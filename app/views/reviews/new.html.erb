<h1>New Review</h1>



    <%= form_for [@movie, @review] do |f| %>

    <% unless params[:movie_id] %>
    <div><%= f.collection_select :movie_id, Movie.all, :id, :name, { prompt: 'All Movies'} %></div>
    <% end %>
    <br>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <br>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <br>
    <div>
      <%= f.submit 'Submit' %>
    </div>

    <% end %>
