<h1>New Review</h1>
<%= form_for(@review, url: reviews_new_path) do |f| %>

  <%= f.label :movie %>
  <%= f.collection_select :movie_id, Movie.all, :id, :title %>
  <br />
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :body %>
  <%= f.text_area :body %>
  <br />
  <%= f.submit :submit %>

<% end %>
