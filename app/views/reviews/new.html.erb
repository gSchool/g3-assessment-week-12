<h1> New Review </h1>


<table>
	<%= form_for [@movie,@review] do |f| %> 
	<tr>
		<td><%= label_tag "Select a movie" %></td>
		<td><%=f.collection_select(:movie_id, Movie.all, :id, :movie_name,{include_blank:"All Movies"}) %></td>
	</tr>
	<tr>
		<td><%= f.label :title %></td>
		<td><%= f.text_field :title %></td>
	</tr>
	<tr>
		<td><%= f.label :body %></td>
		<td><%= f.text_field :body %></td>
	</tr>
	<tr>
		<td><%= f.submit %></td>
		<% end %> 
	</tr>
</table>


 
