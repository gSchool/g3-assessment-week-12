<div class="page-header">
  <h1>New Review</h1>
</div>
<%= form_for(@review) do |f| %>
  <%= f.label :movie_id, 'All Movies'%>
  <%= f.collection_select(:movie_id, Movie.all, :id, :name) %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>
