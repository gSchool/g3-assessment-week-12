<% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |message| %>
      <%= message %><br>
    <% end %>
<% end %>

<%= form_for @review do |f|  %>
  <% if params[:movie_id] %>
    <%= f.hidden_field :movie_id, :value => params[:movie_id]%>
  <% else %>
    <%= f.label :movie_id %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title, {prompt: "Please select a movie..."} %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit %>
<% end %>
