<h1>Cageflix<h1>
<h4>Netflix for Nic Cage movies</h4>

<% if @movie.errors.any? %>
  <div>
    <ul>
    <% @movie.errors.full_messages.each do |msg| %>
      <font color="red"><li><%= msg %></li></font>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@movie) do |f| %>
<p><%= f.label :title %>
<%= f.text_field :title %></p>
<p><%= f.label 'Year' %>
<%= f.text_field :year_produced %>
<p><%= f.label 'Synopsis' %>
<%= f.text_area :description %>
<p><%= f.submit 'Create Movie' %>
<% end %>
