<h1>New Movie</h1>

<% if @movie.errors %>
  <div class="error">
    <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @movie do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>
<br />
<%= f.label :year %>
<%= f.text_field :year %>
<br />
<%= f.label :synopsis %>
<%= f.text_area :synopsis %>
<br />
<%= f.submit %>

<% end %>

<%= link_to 'back', movies_path %>
