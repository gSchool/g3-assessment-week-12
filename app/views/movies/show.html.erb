<div class="page-header">
  <h1><%= @movie.name %></h1>
</div>
<%= link_to 'Add Review', new_movie_review_path(@movie) %>
<%= @movie.summary %>
<ul>
<% @movie.reviews.each do |review| %>
  <li>
    <%= review.user.username %>
    |
    <%= review.title %>
    |
    <%= review.body %>
  </li>
<% end %>
</ul>
